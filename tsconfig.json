{
  "extends": "@amnis/tsconfig-react",
  "compilerOptions": {
    "types": ["react", "react-dom", "vitest/globals"],
    "lib": ["DOM", "ES2022"],
    "target": "es6",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "preserveSymlinks": true,
  },
  "include": [
    "src"
  ]
}